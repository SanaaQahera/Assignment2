    #include <iostream>
    #include <cmath>
    using namespace std;
     
    int main() {
     
    	double side,area,sq,pw;
    	cout <<"Enter length of side of equilateral triangle\n";
    	cin >>side;
    	sq = sqrt(3);
    	pw = pow(side,2);
    	area = (pw*sq)/4;
    	cout <<"The area of triangle is = " <<area;
     
    	return 0;
    }
